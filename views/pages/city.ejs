<!DOCTYPE html>
<html>

<head>
  <% include ../partials/header.ejs %>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
      crossorigin="anonymous">
    <link href="../stylesheets/fonts/fonts.css" rel="stylesheet">
    <link rel="stylesheet" href="../stylesheets/index.css">
    <script>
      $(document).ready(function () {
        function findImages(city) {
          var dfrrd = new $.Deferred();
          $.ajax({
            type: "GET",
            dataType: "jsonp",
            url: "https://pixabay.com/api/?key=8158793-b6b28f3581a06e835f99844f5&q=" + city
              + "&image_type=photo",
            success: function (data) {
              data = $.map(data.hits, function (obj, index) {
                return {
                  image: obj.webformatURL
                };
              });
              dfrrd.resolve(data);
            }
          });
          return dfrrd.promise();
        }
        $.when(findImages("<%= City %>")).done(function (data) {
          console.log("test" + data);
          for (var i = 0; i < 20; i++) {
            if (data[i] !== undefined) {
              $("#images").append(
                "<div class='col-sm-3'><a target='_blank' href='" +
                data[i].image +
                "'><img class='flickrImgs' src='" +
                data[i].image +
                "'/></a></div>"
              );
            }
          }
        });
        $('#fixed-lower-nav').affix({
          offset: { top:100 }
        });

      });



    </script>
</head>

<body>

  <% include ../partials/nav.ejs %>
    <% include ../partials/nav2.ejs %>
      <div class="container">
        <br/>
        <br>
        <br>
        <br>
        <br>
        <br>
        <h1>Welcome to ILoveMyCity!</h1>
        <h2>Here are some of the images for
          <%= Label %>
        </h2>
        <br>
        <div class='row'>
          <div id="images">
          </div>
        </div>
      </div>



</body>

</html>